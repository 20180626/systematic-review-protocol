    keywords = {localization; street canyons; GPS; Shared bikes},
    month = oct,
    number = {4},
    numpages = {28},
    publisher = {Association for Computing Machinery},
    title = {BikeGPS: Localizing Shared Bikes in Street Canyons with 
Low-Level GPS Cooperation},
