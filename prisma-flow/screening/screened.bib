    issue_date = {March 2020},
    journal = {Proc. ACM Interact. Mob. Wearable Ubiquitous Technol.},
    keywords = {key generation system; continuous authentication 
system; kinetic energy harvester; gait; compressive sensing},
    month = mar,
    number = {1},
    numpages = {26},
    publisher = {Association for Computing Machinery},
    title = {KEHKey: Kinetic Energy Harvester-Based Authentication and 
Key Generation for Body Area Network},
    url = {https://doi.org/10.1145/3381754},
    volume = {4},
    year = {2020}
}

