    journal = {ACM Trans. Priv. Secur.},
    keywords = {neural networks; Machine learning; adversarial 
examples; face recognition},
    month = jun,
    number = {3},
    numpages = {30},
    publisher = {Association for Computing Machinery},
    title = {A General Framework for Adversarial Examples with 
Objectives},
    url = {https://doi.org/10.1145/3317611},
