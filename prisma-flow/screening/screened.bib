    volume = {13},
    year = {2017}
}

@article{10.1145/3409804,
    abstract = {Naturally occurring disturbances and malicious attacks 
can lead to faults in synchronizing the clocks of two network nodes. 
In this article, we investigate the fundamental resilience bounds of 
network clock synchronization for a system of N nodes against the 
peer-to-peer synchronization faults. Our analysis is based on 
practical synchronization algorithms with time complexity down to 
