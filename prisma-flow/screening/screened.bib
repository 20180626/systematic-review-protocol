    articleno = {6},
    author = {Gul Agha and Karl Palmskog},
    doi = {10.1145/3158668},
    issn = {1049-3301},
    issue_date = {January 2018},
    journal = {ACM Trans. Model. Comput. Simul.},
    keywords = {temporal logic; hypothesis testing; estimation; 
Statistical model checking; simulation},
    month = jan,
    number = {1},
    numpages = {39},
    publisher = {Association for Computing Machinery},
    title = {A Survey of Statistical Model Checking},
    url = {https://doi.org/10.1145/3158668},
    volume = {28},
    year = {2018}
}

