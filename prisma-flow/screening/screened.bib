services; participatory sensing; privacy preservation; smart cities},
    month = feb,
    number = {1},
    numpages = {25},
    publisher = {Association for Computing Machinery},
    title = {CrowdPrivacy: Publish More Useful Data with Less Privacy 
Exposure in Crowdsourced Location-Based Services},
    url = {https://doi.org/10.1145/3375752},
    volume = {23},
    year = {2020}
}

