    keywords = {virtualization; Software defined radio; 
reconfiguration},
    month = apr,
    number = {1},
    numpages = {22},
    publisher = {Association for Computing Machinery},
    title = {Secure Reconfiguration of Software-Defined Radio},
    url = {https://doi.org/10.1145/2146417.2146427},
    volume = {11},
