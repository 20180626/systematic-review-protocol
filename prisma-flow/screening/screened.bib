    doi = {10.1145/3032963},
    issn = {1559-1131},
    issue_date = {May 2017},
    journal = {ACM Trans. Web},
    keywords = {user-generated content moderation; String 
deobfuscation; obscenity obfuscation dataset},
    month = apr,
    number = {2},
    numpages = {24},
    publisher = {Association for Computing Machinery},
    title = {On Obstructing Obscenity Obfuscation},
    url = {https://doi.org/10.1145/3032963},
