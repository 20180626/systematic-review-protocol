    articleno = {6},
    author = {Federico Chiariotti and Chiara Pielli and Nicola 
Laurenti and Andrea Zanella and Michele Zorzi},
    doi = {10.1145/3365838},
    issn = {1550-4859},
    issue_date = {February 2020},
    journal = {ACM Trans. Sen. Netw.},
    keywords = {media access control; time synchronization; 
multichannel; Wireless sensor networks; radio interference},
    month = nov,
    number = {1},
    numpages = {25},
    publisher = {Association for Computing Machinery},
    title = {A Game-Theoretic Analysis of Energy-Depleting Jamming 
Attacks with a Learning Counterstrategy},
    url = {https://doi.org/10.1145/3365838},
    volume = {16},
    year = {2019}
