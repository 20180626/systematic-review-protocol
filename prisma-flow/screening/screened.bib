    issn = {1539-9087},
    issue_date = {September 2012},
    journal = {ACM Trans. Embed. Comput. Syst.},
    keywords = {isolated execution; operating system; Secure 
execution; security vulnerabilities},
    month = sep,
    number = {3},
    numpages = {20},
    publisher = {Association for Computing Machinery},
    title = {INVISIOS: A Lightweight, Minimally Intrusive Secure 
Execution Environment},
    url = {https://doi.org/10.1145/2345770.2345772},
    volume = {11},
    year = {2012}
}

@article{10.1145/3281444,
    abstract = {Smart Meters are a key component of increasing the 
power efficiency of the Smart Grid. To help manage the grid 
effectively, these meters are designed to collect information on power 
