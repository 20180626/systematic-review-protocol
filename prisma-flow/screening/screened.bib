    issn = {2378-962X},
    issue_date = {May 2020},
    journal = {ACM Trans. Cyber-Phys. Syst.},
    keywords = {Cyber-physical systems; forward secrecy; truly 
multi-factor security; node capture attack; wireless sensor networks},
    month = mar,
    number = {3},
    numpages = {26},
    publisher = {Association for Computing Machinery},
    title = {Efficient Multi-Factor User Authentication Protocol with 
Forward Secrecy for Real-Time Data Access in WSNs},
