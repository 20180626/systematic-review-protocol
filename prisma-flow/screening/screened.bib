    issn = {1550-4832},
    issue_date = {October 2018},
    journal = {J. Emerg. Technol. Comput. Syst.},
    keywords = {droplet routing; Physical design automation; 
checkpoint; microfluidics; biochips; sensor},
    month = oct,
    number = {3},
    numpages = {22},
    publisher = {Association for Computing Machinery},
    title = {Reliability Hardening Mechanisms in Cyber-Physical 
Digital-Microfluidic Biochips},
