    issn = {1533-5399},
    issue_date = {November 2018},
    journal = {ACM Trans. Internet Technol.},
    keywords = {Statistical modeling; measurement errors; web 
security; hosting providers; abuse concentrations},
    month = aug,
    number = {4},
    numpages = {25},
    publisher = {Association for Computing Machinery},
    title = {Rotten Apples or Bad Harvest? What We Are Measuring When 
We Are Measuring Abuse},
    url = {https://doi.org/10.1145/3122985},
    volume = {18},
