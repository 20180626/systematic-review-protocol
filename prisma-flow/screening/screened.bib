    journal = {ACM Trans. Priv. Secur.},
    keywords = {physical security; attack graphs; optimization; 
attack; Nash equilibrium; Trust; game theory; attacker; optimal 
policy; probability theory; security; cyber security; GPLADD; 
Deterrence; PLADD; defender; stochastic process},
    month = jun,
    number = {3},
    numpages = {27},
    publisher = {Association for Computing Machinery},
    title = {GPLADD: Quantifying Trust in Government and Commercial 
Systems A Game-Theoretic Approach},
