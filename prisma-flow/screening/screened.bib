    number = {6},
    numpages = {14},
    pages = {3473--3486},
    publisher = {IEEE Press},
    title = {Timely Wireless Flows With General Traffic Patterns: 
Capacity Region and Scheduling Algorithms},
    url = {https://doi.org/10.1109/TNET.2017.2749513},
    volume = {25},
    year = {2017}
}

