    issue_date = {December 2018},
    journal = {ACM Trans. Sen. Netw.},
    keywords = {android; virtual machine; software architecture; 
Mobile crowd-sensing; domain-specific language},
    month = nov,
    number = {3--4},
    numpages = {25},
    publisher = {Association for Computing Machinery},
    title = {Flux: A Platform for Dynamically Reconfigurable Mobile 
