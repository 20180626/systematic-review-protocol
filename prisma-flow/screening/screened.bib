    doi = {10.1145/3432590},
    issn = {1539-9087},
    issue_date = {January 2021},
    journal = {ACM Trans. Embed. Comput. Syst.},
    keywords = {timing-based detection; software security; Embedded 
system security; medical device security; anomaly detection},
    month = jan,
    number = {2},
    numpages = {27},
    publisher = {Association for Computing Machinery},
    title = {Probabilistic Estimation of Threat Intrusion in Embedded 
Systems for Runtime Detection},
    url = {https://doi.org/10.1145/3432590},
    volume = {20},
    year = {2021}
}

@article{10.1145/3126508,
    abstract = {The problem of probabilistic safety verification of 
