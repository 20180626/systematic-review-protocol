}

@article{10.1145/3134750,
    abstract = {Contributing to research on social activism as a form 
of collective action, we report on Diba, a sizable group of Chinese 
nationalists, who overcame the Great Firewall in order to troll 
Taiwan's political leadership. Diba's political activism can be 
characterized as negotiating a tension between two seemingly opposed 
