    journal = {ACM Trans. Embed. Comput. Syst.},
    keywords = {embedded systems; principal component analysis; 
fine-grained analysis; Hardware performance counters},
    month = sep,
    number = {5},
    numpages = {17},
    publisher = {Association for Computing Machinery},
