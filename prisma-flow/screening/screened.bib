    issn = {1539-9087},
    issue_date = {January 2020},
    journal = {ACM Trans. Embed. Comput. Syst.},
    keywords = {micro-ring resonators; embedded systems; optical 
network-on-chip; chip temperature monitoring; Hardware/software 
co-design},
    month = nov,
    number = {6},
    numpages = {24},
    publisher = {Association for Computing Machinery},
    title = {Hardware-Software Collaborative Thermal Sensing in 
Optical Network-on-Chip--Based Manycore Systems},
