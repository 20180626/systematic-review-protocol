    doi = {10.1145/1344411.1344413},
    issn = {1046-8188},
    issue_date = {March 2008},
    journal = {ACM Trans. Inf. Syst.},
    keywords = {Stylometry; style classification; online text; text 
mining; discourse},
    month = apr,
    number = {2},
    numpages = {29},
    publisher = {Association for Computing Machinery},
    title = {Writeprints: A Stylometric Approach to Identity-Level 
Identification and Similarity Detection in Cyberspace},
    url = {https://doi.org/10.1145/1344411.1344413},
    volume = {26},
    year = {2008}
}
{author={Jean-Philippe Beja},
