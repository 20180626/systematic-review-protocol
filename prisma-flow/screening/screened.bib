    articleno = {22},
    author = {Brian A. Powell},
    doi = {10.1145/3360469},
    issn = {2471-2566},
    issue_date = {December 2019},
    journal = {ACM Trans. Priv. Secur.},
    keywords = {one-class learning; Data exfiltration},
    month = nov,
    number = {4},
    numpages = {34},
    publisher = {Association for Computing Machinery},
    title = {Malicious Overtones: Hunting Data Theft in the Frequency 
Domain with One-Class Learning},
    url = {https://doi.org/10.1145/3360469},
    volume = {22},
    year = {2019}
