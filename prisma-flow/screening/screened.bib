    year = {2020}
}

@article{10.1145/2465787.2465796,
    abstract = {Static timing analysis is the state-of-the-art 
practice of ascertaining the timing behavior of current-generation 
real-time embedded systems. The adoption of more complex hardware to 
respond to the increasing demand for computing power in 
next-generation systems exacerbates some of the limitations of static 
