    journal = {ACM Trans. Sen. Netw.},
    keywords = {wireless charging; battery exhaustion attack; 
denial-of-service; Wireless networking; Internet of Things},
    month = may,
    number = {3},
    numpages = {25},
    publisher = {Association for Computing Machinery},
    title = {Power-Positive Networking: Wireless-Charging-Based 
Networking to Protect Energy against Battery DoS Attacks},
