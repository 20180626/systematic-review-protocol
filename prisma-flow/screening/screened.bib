    keywords = {computational social science; machine learning; 
ambiguity; human-centered machine learning; Social scientists; 
qualitative coding},
    month = jun,
    number = {2},
    numpages = {20},
    publisher = {Association for Computing Machinery},
    title = {Using Machine Learning to Support Qualitative Coding in 
Social Science: Shifting the Focus to Ambiguity},
    url = {https://doi.org/10.1145/3185515},
